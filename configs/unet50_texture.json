{
  "model": {
    "name": "unet_resnet50",
    "config": {
      "channels": 3,
      "num_classes": 7,
      "weights": null
    }
  },
  "metrics": {
    "smp": {
      "mode" : "multilabel",
      "threshold" : 0.5,
      "num_classes" : 7,
      "metrics": {
        "f1" : {
         "reduction" : "macro",
         "class_weights" : null,
         "zero_division" : 1
         },
        "iou" : {
          "reduction" : "macro",
         "class_weights" : null,
         "zero_division" : 1
        }
      }
    }
  },
  "loss": {
    "name": "binary_cross_entropy",
    "config": {
      "reduction": "mean"
    }
  },
  "optimizer": {
    "name": "Adam",
    "config": {
      "lr": 0.0001,
      "weight_decay": 0
    }
  },
  "scheduler" : {
    "name" : "ReduceLROnPlateau",
    "config" : {
        "metric_name" : "loss",
        "save_history" : true,
        "mode" : "min",
        "factor" : 0.1,
        "patience" : 7,
        "threshold_mode" : "rel",
        "threshold" : 0.01
    }
  },
  "pipeline": {
    "simple_multilabel": {
      "max_epoch": 50,
      "batch_size": 8
    }
  }
}
