{
    "model" : {
        "name" : "unet_resnet18",
        "config" : {
            "channels" : 3,
            "num_classes" : 7
        }
    },
    "metrics" : {
        "rmse" : {
            "max_p" : 8
        },
        "fsim" : {
            "T1" : 0.85,
            "T2" : 160
        },
        "ssim" : {
            "max_p" : 8
        },
        "smp" : {
            "mode" : "multiclass",
            "ignore_index" : -1,
            "threshold" : 0.1,
            "num_classes" : 7,
            "metrics" : {
                "fbeta" : {
                    "beta" : 1.0,
                    "reduction" : "micro",
                    "zero_division" : 1
                }
            }
        }
    },
    "loss" : {
        "name" : "cross_entropy",
        "config" : {
            "reduction" : "mean",
            "ignore_index" : 0
        }
    },
    "optimizer" : {
        "name" : "SGD",
        "config" : {
            "lr" : 0.5,
            "momentum": 0.9
        }
    },
    "scheduler" : {
        "name" : "ReduceLROnPlateau",
        "config" : {
            "metric_name" : "loss",
            "save_history" : true,
            "mode" : "min",
            "factor" : 0.5,
            "patience" : 3,
            "threshold_mode" : "rel",
            "threshold" : 0.1
        }
    },
    "pipeline" : {
        "simple_train" : {
            "max_epoch" : 1,
            "batch_size" : 2
        }
    }
}
